<idea-plugin>
    <id>org.toitlang.intellij-toit</id>
    <name>Toit language support</name>
    <vendor email="krulimut@gmail.com" url="https://github.com/mikkeldamsgaard">Crash Junkie</vendor>

    <description><![CDATA[
    Provides support for working with toit projects
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Toit File"
                  implementationClass="org.toitlang.intellij.ToitFileType"
                  fieldName="INSTANCE"
                  language="Toit"
                  extensions="toit"/>
        <lang.parserDefinition language="Toit"
                               implementationClass="org.toitlang.intellij.parser.ToitParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Toit"
                                       implementationClass="org.toitlang.intellij.ToitSyntaxHighlighterFactory"/>

        <colorSettingsPage implementation="org.toitlang.intellij.ToitColorSettingsPage"/>
        <annotator language="Toit" implementationClass="org.toitlang.intellij.ToitAnnotationHighlighter"/>
        <applicationConfigurable parentId="language" instance="org.toitlang.intellij.ToitApplicationSettings"
                                 id="org.toitlang.intellij.ToitApplicationSettings" displayName="Toit"/>
        <projectService serviceImplementation="org.toitlang.intellij.engine.ToitApiEngine"/>
        <indexedRootsProvider implementation="org.toitlang.intellij.indexer.ToitSdkIndexRoot"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>